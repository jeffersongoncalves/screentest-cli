{
    "name": "jeffersongoncalves/screentest-cli",
    "description": "CLI tool for automated screenshot generation of Filament plugins.",
    "keywords": ["cli", "laravel", "filament", "screenshots", "puppeteer", "documentation"],
    "homepage": "https://github.com/jeffersongoncalves/screentest-cli",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jefferson Goncalves",
            "email": "jeffersongoncalves@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "laravel-zero/framework": "^12.0",
        "laravel/pint": "^1.25",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.8|^4.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "build": ["php screentest app:build screentest"],
        "lint": "./vendor/bin/pint",
        "test:lint": "./vendor/bin/pint --test",
        "test:unit": "./vendor/bin/pest --parallel",
        "test": [
            "@test:unit",
            "@test:lint"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/screentest"]
}
